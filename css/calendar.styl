// AGENDA

.agenda .date-label
  background none !important

.agenda .day
  border-bottom 1px solid #e8e8e8 !important
  padding-top .6em

.agenda .event
  color #888
  border 0 !important
  padding .5em 1em

.agenda .event-links
  margin-left 0 !important

.agenda .event-links a
  color #333
  background #f4f4f4
  padding .3em .7em
  margin .5em 1em 0 -0.4em
  display inline-block
  font-size .95em
  border-radius 3px
  text-decoration none

.agenda .title-wrapper
  margin 0 0 0 5em !important

.agenda .all-day .title-wrapper
  margin 0 !important

.agenda .scrollbox
  padding 0 1em

.event-details-label
  width 5.5em

// WEEK VIEW

.wk-weektop
  background none !important
.wk-dayname
  color #333 !important
.wk-scrolltimedevents
  border-top 1px solid #e8e8e8 !important
