
@import "variables"

body
  padding 0
  margin 0

.main
  display flex
  flex-direction row
  -webkit-app-region no-drag

.sidebar
  min-width 200px
  background #f2f4f8
  padding 4em 1em
  flex-grow 5
  -webkit-app-region drag
  a
    display block
    line-height 2em
    color #555
    -webkit-app-region no-drag
    &:hover
      text-decoration none
  ul
    padding 0
    list-style-type none

webview
  width 0
  height 0
  opacity 0
  pointer-events none
  transition opacity .5s

webview.active
  flex-grow 5
  opacity 1
  pointer-events auto
  width 80vw
  height 100vh
